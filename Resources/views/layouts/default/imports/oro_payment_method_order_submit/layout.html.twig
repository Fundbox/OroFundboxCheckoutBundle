{% block _order_review_payment_methods_fundbox_checkout_widget %}
    {% if options.payment_method is defined %}
        <div class="hidden"
            data-page-component-module="fundboxcheckout/js/app/components/fundbox-checkout-component"
            data-page-component-options="{{ {
                paymentMethod: options.payment_method,
                publicKey: view.options.publicKey,
                envUrl: view.options.envUrl,
                transactionType: view.options.transactionType
            }|json_encode }}">
        </div>
    {% endif %}
{% endblock %}
